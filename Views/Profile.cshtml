@{ Layout = "_Layout"; }

<p>Hello @Model.FullName! ID: @Model.Id.</p>

<form name="profileData"
      method="post"
      action=""
      target="_self"
      enctype="multipart/form-data">

  <label for="id">ID</label>
  <input type="text" id="id" readonly value="@Model.Id" />
  <br />

  <label for="fullName">Full name</label>
  <input type="text" id="fullName" name="fullName" value="@Model.FullName" />
  <br />

  <label for="email">Email</label>
  <input type="email" id="email" name="email" value="@Model.Email" />
  <br />
  <br />

  <label for="picture">Picture</label>
  <img src="@Model.PictureUrl" />
  <input type="file" id="picture" name="picture" accept="image/*"/>
  <br />

  <input type="hidden" id="etag" name="etag" value="@Model.Etag" />

	<input type="submit" value="Update Profile" />
  <br />
</form>
